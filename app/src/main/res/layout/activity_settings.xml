<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- 工具栏 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple_700"
        android:elevation="4dp"
        app:title="设置"
        app:titleTextColor="@android:color/white"
        app:titleTextAppearance="@style/ToolbarTitleStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 滚动视图，用于包裹所有设置内容 -->
    <ScrollView
        android:id="@+id/settings_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <!-- 设置内容 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/settings_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 悬浮窗设置 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="悬浮窗设置"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                android:layout_marginBottom="16dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeStepGranularity="2sp" />

            <!-- 透明度设置 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="悬浮窗透明度"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="8sp"
                    android:autoSizeMaxTextSize="16sp"
                    android:autoSizeStepGranularity="2sp" />

                <SeekBar
                    android:id="@+id/opacity_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="80" />

                <TextView
                    android:id="@+id/opacity_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="80%"
                    android:textSize="8.4sp"
                    android:textColor="@color/black"
                    android:alpha="0.7"
                    android:gravity="right"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="6sp"
                    android:autoSizeMaxTextSize="12sp"
                    android:autoSizeStepGranularity="1sp" />
            </LinearLayout>

            <!-- 字体大小设置 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="字体大小"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="8sp"
                    android:autoSizeMaxTextSize="16sp"
                    android:autoSizeStepGranularity="2sp" />

                <SeekBar
                    android:id="@+id/font_size_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="4"
                    android:progress="2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="小"
                    android:textSize="8sp"
                    android:textColor="@color/black"
                    android:alpha="0.7"
                    android:gravity="left"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="6sp"
                    android:autoSizeMaxTextSize="12sp"
                    android:autoSizeStepGranularity="1sp" />

                    <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="中"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:alpha="0.7"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="8sp"
                    android:autoSizeMaxTextSize="14sp"
                    android:autoSizeStepGranularity="1sp" />

                    <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="大"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:alpha="0.7"
                    android:gravity="right"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeMaxTextSize="16sp"
                    android:autoSizeStepGranularity="1sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 题干字数限制设置 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="题干字数限制"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="8sp"
                    android:autoSizeMaxTextSize="16sp"
                    android:autoSizeStepGranularity="2sp" />

                <SeekBar
                    android:id="@+id/question_length_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="200"
                    android:progress="50" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="短"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:alpha="0.7"
                    android:gravity="left"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeMaxTextSize="16sp"
                    android:autoSizeStepGranularity="1sp" />

                    <TextView
                    android:id="@+id/question_length_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="50字"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:alpha="0.7"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeMaxTextSize="16sp"
                    android:autoSizeStepGranularity="1sp" />

                    <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="无限制"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:alpha="0.7"
                    android:gravity="right"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeMaxTextSize="16sp"
                    android:autoSizeStepGranularity="1sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 截图延迟设置 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="首次截图选区延迟设置"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="8sp"
                    android:autoSizeMaxTextSize="16sp"
                    android:autoSizeStepGranularity="2sp" />

                <SeekBar
                    android:id="@+id/screenshot_delay_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="118"
                    android:progress="0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="200ms"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:alpha="0.7"
                    android:gravity="left"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeMaxTextSize="16sp"
                    android:autoSizeStepGranularity="1sp" />

                    <TextView
                    android:id="@+id/screenshot_delay_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="200ms"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:alpha="0.7"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeMaxTextSize="16sp"
                    android:autoSizeStepGranularity="1sp" />

                    <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="12s"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:alpha="0.7"
                    android:gravity="right"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeMaxTextSize="16sp"
                    android:autoSizeStepGranularity="1sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- OCR设置卡片 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/ocr_settings_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- OCR设置标题 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OCR设置"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                android:layout_marginBottom="16dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeStepGranularity="2sp" />

            <!-- OCR接口选择设置 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OCR接口选择"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/ocr_interface_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/baidu_ocr_radio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="百度OCR"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:checked="true"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="8sp"
                        android:autoSizeMaxTextSize="13sp"
                        android:autoSizeStepGranularity="1sp" />
                </RadioGroup>
            </LinearLayout>
            
            <!-- OCR语言选择设置 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OCR语言选择"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/ocr_language_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/chinese_ocr_radio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="中文识别"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:checked="true"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="8sp"
                        android:autoSizeMaxTextSize="13sp"
                        android:autoSizeStepGranularity="1sp" />

                    <RadioButton
                        android:id="@+id/english_ocr_radio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="英文识别"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="8sp"
                        android:autoSizeMaxTextSize="13sp"
                        android:autoSizeStepGranularity="1sp" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 软件说明卡片 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/about_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 软件说明标题 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="软件说明"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                android:layout_marginBottom="16dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeStepGranularity="2sp" />

            <!-- 软件说明内容 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="忙答之是一款悬浮窗答题辅助工具，支持自定义悬浮窗透明度和字体大小。\n\n功能特点：\n1. 悬浮窗实时显示题目和答案\n2. 支持调整悬浮窗透明度\n3. 支持调整字体大小\n4. 简洁易用的操作界面"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="16sp"
                android:autoSizeStepGranularity="2sp" />

            <!-- 关于作者标题 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="关于作者"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                android:layout_marginBottom="16dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeStepGranularity="2sp" />

            <!-- 关于作者内容 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="作者：忙答之开发团队\n版本：1.0.0\n联系方式：support@miniya.com"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:lineSpacingExtra="4dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeStepGranularity="2sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>