<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="0dp"
    tools:context=".MainActivity">

    <!-- 统一的蓝色背景标题栏 - 包含设置按钮和应用标题 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp">

        <!-- 设置按钮 - 顶部左侧位置 -->
        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setting"
            android:background="@null"
            android:tint="@android:color/white"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:maxWidth="48dp"
            android:maxHeight="48dp"
            android:contentDescription="设置"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <!-- 应用标题 - 居中显示 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忙答之"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    
    <!-- 应用副标题 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="智能识别，快速答题"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:alpha="0.9"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp" 
        android:paddingHorizontal="16dp" />

    <!-- 主要内容区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 主要功能卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="悬浮窗口"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                android:layout_marginBottom="12dp" />

            <!-- 启动/停止按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/start_button"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="启动悬浮窗"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_primary"
                    android:layout_marginRight="8dp"
                    android:elevation="2dp"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/stop_button"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="停止悬浮窗"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_secondary"
                    android:layout_marginLeft="8dp"
                    android:elevation="2dp"
                    android:stateListAnimator="@null" />
            </LinearLayout>

            <!-- 题库管理 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="题库管理"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                android:layout_marginBottom="12dp" />

            <!-- 导入/删除按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center">

                <!-- 导入按钮 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:descendantFocusability="blocksDescendants">
                    
                    <ImageButton
                        android:id="@+id/import_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/import_icon"
                        android:background="@null"
                        android:layout_marginBottom="8dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:maxWidth="120dp"
                        android:maxHeight="120dp"
                        android:minWidth="80dp"
                        android:minHeight="80dp"
                        android:contentDescription="导入题库"
                        android:clickable="true"
                        android:focusable="true" />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="导入题库"
                        android:textSize="14sp"
                        android:textColor="@color/purple_700"
                        android:textStyle="bold"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeMaxTextSize="18sp"
                        android:autoSizeStepGranularity="2sp" />
                </LinearLayout>

                <!-- 删除按钮 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="8dp"
                    android:descendantFocusability="blocksDescendants">
                    
                    <ImageButton
                        android:id="@+id/delete_all_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/delete"
                        android:background="@null"
                        android:layout_marginBottom="8dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:maxWidth="120dp"
                        android:maxHeight="120dp"
                        android:minWidth="80dp"
                        android:minHeight="80dp"
                        android:contentDescription="清空题库"
                        android:clickable="true"
                        android:focusable="true" />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="清空题库"
                        android:textSize="14sp"
                        android:textColor="@color/purple_700"
                        android:textStyle="bold"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeMaxTextSize="18sp"
                        android:autoSizeStepGranularity="2sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 使用教程卡片 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info"
                    android:tint="@color/teal_700"
                    android:layout_marginRight="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用教程"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_700" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scrollbars="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. 点击启动悬浮窗按钮打开悬浮窗\n2. 点击悬浮窗中的截图按钮识别题目\n3. 系统会自动搜索题库并显示答案\n4. 可通过导入按钮添加自定义题库"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="4dp"
                    android:alpha="0.8" />
            </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

        <!-- 底部信息 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="© 2024 忙答之"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:alpha="0.7"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>