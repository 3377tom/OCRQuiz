<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- 设置按钮 - 移到最顶部左侧 -->
    <ImageButton
        android:id="@+id/settings_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/setting"
        android:background="@null"
        android:tint="@android:color/white"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginBottom="16dp"
        android:contentDescription="设置" />

    <!-- 顶部标题区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忙答之"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="智能识别，快速答题"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:alpha="0.9" />
        </LinearLayout>
    </LinearLayout>

    <!-- 主要功能卡片 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="悬浮窗口"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                android:layout_marginBottom="12dp" />

            <!-- 启动/停止按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/start_button"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="启动悬浮窗"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_primary"
                    android:layout_marginRight="8dp"
                    android:elevation="2dp"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/stop_button"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="停止悬浮窗"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_secondary"
                    android:layout_marginLeft="8dp"
                    android:elevation="2dp"
                    android:stateListAnimator="@null" />
            </LinearLayout>

            <!-- 题库管理 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="题库管理"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                android:layout_marginBottom="12dp" />

            <!-- 导入/删除按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center">

                <!-- 导入按钮 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="8dp">
                    
                    <ImageButton
                        android:id="@+id/import_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/import_icon"
                        android:background="@drawable/button_primary"
                        android:layout_marginBottom="8dp"
                        android:elevation="2dp"
                        android:stateListAnimator="@null"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:padding="16dp"
                        android:contentDescription="导入题库" />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="导入题库"
                        android:textSize="14sp"
                        android:textColor="@android:color/blue"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 删除按钮 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="8dp">
                    
                    <ImageButton
                        android:id="@+id/delete_all_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/delete"
                        android:background="@drawable/button_secondary"
                        android:layout_marginBottom="8dp"
                        android:elevation="2dp"
                        android:stateListAnimator="@null"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:padding="16dp"
                        android:contentDescription="清空题库" />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="清空题库"
                        android:textSize="14sp"
                        android:textColor="@android:color/blue"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 使用教程卡片 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info"
                    android:tint="@color/teal_700"
                    android:layout_marginRight="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用教程"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_700" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scrollbars="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. 点击启动悬浮窗按钮打开悬浮窗\n2. 点击悬浮窗中的截图按钮识别题目\n3. 系统会自动搜索题库并显示答案\n4. 可通过导入按钮添加自定义题库"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="4dp"
                    android:alpha="0.8" />
            </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <!-- 底部信息 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="© 2024 忙答之"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:alpha="0.7"
        android:gravity="center" />
</LinearLayout>