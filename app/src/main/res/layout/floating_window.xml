<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/floating_window_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/floating_window_background"
    android:padding="20dp">

    <TextView
        android:id="@+id/answer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:text="@string/wait_recognition"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/capture_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:text="@string/capture_button"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/answer_text"
        app:layout_constraintStart_toStartOf="@+id/answer_text"
        app:layout_constraintTop_toBottomOf="@+id/answer_text" />

    <Button
        android:id="@+id/settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:text="设置截图范围"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/capture_button"
        app:layout_constraintStart_toStartOf="@+id/capture_button"
        app:layout_constraintTop_toBottomOf="@+id/capture_button" />

</androidx.constraintlayout.widget.ConstraintLayout>